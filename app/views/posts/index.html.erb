<h1>All Posts</h1>

<% if session[:user_id] = nil %>
    <div>
        <%= link_to "Log in/Sign up here!", new_user_session_path %>
    </div>
<% else %>
    <div>
        <%= button_to "Log out", destroy_user_session_path %>
    </div>
<% end %>

<ul>
    <% @posts.each do |post| %>
        <li>
            <%= link_to post.title, post %>
        </li>
    <% end %>
</ul>

